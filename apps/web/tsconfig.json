{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@daily-ai-news/ai": [
        "../../packages/ai"
      ],
      "@daily-ai-news/db": [
        "../../packages/db"
      ],
      "@daily-ai-news/fetchers": [
        "../../packages/fetchers"
      ],
      "@daily-ai-news/processors": [
        "../../packages/processors"
      ],
      "@daily-ai-news/publisher": [
        "../../packages/publisher"
      ],
      "@daily-ai-news/config": [
        "../../packages/config"
      ]
    },
    "allowJs": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
